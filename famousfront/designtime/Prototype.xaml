<UserControl x:Class="famousfront.designtime.Prototype"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ff="clr-namespace:famousfront"
             xmlns:ctrl="clr-namespace:famousfront.controls"
             xmlns:utils="clr-namespace:famousfront.utils"
             xmlns:vm="clr-namespace:famousfront.viewmodels" d:DesignWidth="800"
             xmlns:metro="http://schemas.codeplex.com/elysium"
             xmlns:params="http://schemas.codeplex.com/elysium/params" 
             params:Design.Theme="Light"

  params:General.ContentFontSize="{StaticResource NormalTextSize}"
  params:General.HeaderFontSize="{StaticResource VeryLargeTextSize}"
  params:General.TitleFontSize="{StaticResource LargeTextSize}"             
             TextElement.FontFamily="{StaticResource LightFont}"      
             mc:Ignorable="d" d:DesignHeight="300" Background="white">
  <Grid x:Name="LayoutRoot">
    <TextBlock FontSize="12pt" Text="小道消息传王功权近期内或被保释，但许志永有难度。如果许王真被释放，偶愿意为习近平唱三天赞歌"/>
  </Grid>
</UserControl>
