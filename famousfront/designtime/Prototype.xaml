<UserControl x:Class="famousfront.designtime.Prototype"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ff="clr-namespace:famousfront"
             xmlns:ctrl="clr-namespace:famousfront.controls"
             xmlns:utils="clr-namespace:famousfront.utils"
             xmlns:vm="clr-namespace:famousfront.viewmodels" d:DesignWidth="800"
             xmlns:metro="http://schemas.codeplex.com/elysium"
             xmlns:params="http://schemas.codeplex.com/elysium/params" 
             params:Design.Theme="Light"

  params:General.ContentFontSize="{StaticResource NormalTextSize}"
  params:General.HeaderFontSize="{StaticResource VeryLargeTextSize}"
  params:General.TitleFontSize="{StaticResource LargeTextSize}"             
             TextElement.FontFamily="{StaticResource LightFont}"      
             mc:Ignorable="d" Background="White">
  <UserControl.Resources>
  </UserControl.Resources>
  <Grid x:Name="LayoutRoot">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="320"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <Grid Background="{DynamicResource AccentBrush}">
      <Image Source="http://p4.v.iask.com/336/849/48717043_2.jpg"/>
    </Grid>
    <Grid Grid.Column="1">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition/>
      </Grid.RowDefinitions>
      <TextBlock Text="听巩阿姨唱啊，这神曲根本停不下来" FontSize="22.667" TextAlignment="Center" Padding="12"/>
      <Grid Grid.Row="1">
        <Button Style="{DynamicResource ButtonLightStyle}">
          <Path Stretch="Uniform" Fill="{Binding Foreground,RelativeSource={RelativeSource AncestorType={x:Type Button}}}" Data="{StaticResource PathMediaPlay}" Height="81.818" Width="108"/>
        </Button>
      </Grid>
    </Grid>
  </Grid>
</UserControl>
