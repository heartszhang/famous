<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:famousfront.viewmodels" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d">
    <DataTemplate DataType="{x:Type vm:FeedEntriesViewModel}" d:IsDesignTimeCreatable="false">
        <Grid>
            <Grid.Resources>
                <CollectionViewSource x:Key="GroupedEntries" Source="{Binding Entries, Mode=OneWay}">
                    <CollectionViewSource.GroupDescriptions>
                        <PropertyGroupDescription PropertyName="PubDay"/>
                    </CollectionViewSource.GroupDescriptions>
                </CollectionViewSource>
            </Grid.Resources>
            <ListBox ItemsSource="{Binding Source={StaticResource GroupedEntries}}"/>
        </Grid>
    </DataTemplate>
</ResourceDictionary>