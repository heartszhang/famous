<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:params="http://schemas.codeplex.com/elysium/params"
                    xmlns:vm="clr-namespace:famousfront.viewmodels"                    >
  <DataTemplate DataType="{x:Type vm:ImageUnitViewModel}">
    <Border BorderBrush="{StaticResource LowestLightBrush}" BorderThickness="0" Margin="{Binding Path=(params:General.DefaultPadding), RelativeSource={RelativeSource self}, Mode=OneWay}">
      <Image Source="{Binding Url,Mode=OneWay,Converter={StaticResource NullImageConverter}}" Stretch="UniformToFill"/>
    </Border>
  </DataTemplate>

</ResourceDictionary>